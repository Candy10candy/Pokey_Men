<Window x:Class="Pokey_Men.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokey_Men"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Cornsilk">
    <Grid>
        <Button Name="StartButton" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="317" Margin="239,187,0,0" Height="138" Click="StartButton_Click" Background="LightBlue" BorderBrush="CornflowerBlue" FontSize="50"/>
        <Label Content="Instructions:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="47" Width="178" FontSize="30" Margin="32,10,0,0"/>
        <TextBlock Text="Fight the opponent team! Choose your attack each turn. The more energy it takes, the stronger it is! You will regain 2 energy at the start of each round. You can heal 25 health on any of your three fighters, but be careful! You only have two healing potions!" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="44,67,0,0" FontSize="20" Width="723" Height="115"/>



    </Grid>
</Window>
